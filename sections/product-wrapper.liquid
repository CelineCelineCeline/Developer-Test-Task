<div class="product-layout">
    <div class="product-gallery-wrapper">
        <!-- Thumbnails -->
        <div class="swiper thumb-swiper">
            <div class="swiper-wrapper">
                {% for image in product.images %}
                    <div class="swiper-slide">
                        <img src="{{ image | img_url: '100x100' }}" alt="{{ image.alt | escape }}" class="thumb-img" />
                    </div>
                {% endfor %}
            </div>
        </div>

        <!-- Main image -->
        <div class="main-gallery-area">
            <div class="swiper main-swiper">
                <div class="swiper-wrapper">
                    {% for image in product.images %}
                        <div class="swiper-slide">
                            <img src="{{ image | img_url: '800x800' }}" alt="{{ image.alt | escape }}" class="main-img" />
                        </div>
                    {% endfor %}
                </div>
            </div>

            <!-- Arrows below the main image -->
            <div class="swiper-nav">
                <div class="swiper-button-prev">&nbsp;</div>
                <div class="swiper-button-next">&nbsp;</div>
            </div>
        </div>
    </div>

    <!-- Info block -->
    <div class="product-info-box">
        <h1 class="product-title">{{ product.title }}</h1>
        <p class="product-subtitle">{{ product.type }}</p>
        <div class="product-description">
            {{ product.description }}
        </div>


        <div class="product-pricing">
            {% if product.compare_at_price > product.price %}
                <span class="old-price">{{ product.compare_at_price | money }}</span>
            {% endif %}
            <span class="new-price">{{ product.price | money }}</span>
            <span class="vat-text">inkl. MwSt.</span>
        </div>

        <div class="stock-status">
            <span class="dot"></span>
            <span class="stock-text">Auf Lager, in 2â€“3 Tagen bei dir</span>
        </div>

        <form method="post" action="/cart/add">
            <input type="hidden" name="id" value="{{ product.variants.first.id }}">
            <button type="submit" class="add-to-cart-btn">In den Einkaufswagen</button>
        </form>
    </div>
</div>
